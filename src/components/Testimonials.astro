---
import testimonialsData from '../data/testimonials.json';
---

<section class="testimonials">
  <div class="container">
    <div class="testimonials-section fade-in">
      <div class="testimonials-header">
        <h3 class="section-title">What Our Clients Say</h3>
        <p>Hear from those who have experienced our exceptional service</p>
      </div>
      
      <div class="testimonial-carousel">
        <div class="testimonial-slides-container">
          {testimonialsData.map((testimonial) => (
            <div class="testimonial-slide">
              <div class="testimonial-content">
                <div class="testimonial-image">
                  <img src={testimonial.image} alt={testimonial.authorName} />
                </div>
                <div class="testimonial-text">
                  <blockquote class="testimonial-quote">
                    {testimonial.quote}
                    <div class="quote-background">
                      <img src="/assets/quotation-marks.png" alt="Quote" />
                    </div>
                  </blockquote>
                  <div class="testimonial-author">
                    <span class="author-name">â€“ {testimonial.authorName}</span>
                    <span class="author-role">{testimonial.authorRole}</span>
                  </div>
                  <div class="carousel-controls">
                    <button class="carousel-button prev" aria-label="Previous testimonial">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </button>
                    <button class="carousel-button next" aria-label="Next testimonial">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials {
    /* Styles specific to Testimonials */
  }
  
  .testimonials-section {
    background: #2e2e2e;
    border-radius: 16px;
    padding: 4rem 2rem;
    color: var(--text-white);
    margin-top: 4rem;
  }
  
  .testimonials-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .testimonials-header h3 {
    color: var(--text-white);
    font-size: 2.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .testimonials-header p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
  }

  .testimonial-carousel {
    overflow: hidden;
    position: relative;
  }

  .testimonial-slides-container {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .testimonial-slide {
    width: 100%;
    flex-shrink: 0;
  }

  .testimonial-content {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .testimonial-image {
    width: 100%;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }

  .testimonial-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial-text {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 400px;
    padding: 1rem 0;
  }

  .testimonial-quote {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.125rem;
    line-height: 1.8;
    font-style: normal;
    margin: 0 0 2rem 0;
    flex-grow: 1;
    position: relative;
  }

  .quote-background {
    position: absolute;
    bottom: -100px;
    right: 0;
    z-index: 1;
  }

  .quote-background img {
    width: 80px;
    height: 80px;
    opacity: 0.15;
    transform: rotate(180deg);
    filter: brightness(0) invert(1);
  }

  .testimonial-title {
    color: #FFFFFF;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 2rem;
  }

  .testimonial-author {
    margin-bottom: 2rem;
  }

  .author-name {
    display: block;
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }

  .author-role {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
  }

  .carousel-controls {
    display: flex;
    gap: 0.5rem;
  }

  .carousel-button {
    width: 48px;
    height: 48px;
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.8);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .carousel-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.6);
    color: #FFFFFF;
  }

  .carousel-button:active {
    transform: scale(0.95);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .testimonials-section {
      padding: 3rem 1rem;
    }

    .testimonial-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .testimonial-image {
      height: 300px;
      max-width: 300px;
      margin: 0 auto;
    }

    .testimonial-text {
      height: auto;
    }

    .testimonial-title {
      font-size: 2rem;
    }

    .testimonial-quote {
      font-size: 1rem;
    }

    .carousel-controls {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .testimonial-title {
      font-size: 1.75rem;
    }

    .testimonial-quote {
      font-size: 0.95rem;
    }

    .carousel-button {
      width: 44px;
      height: 44px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slidesContainer = document.querySelector('.testimonial-slides-container') as HTMLElement | null;
    const slides = Array.from(document.querySelectorAll('.testimonial-slide')) as HTMLElement[];
    const prevButtons = Array.from(document.querySelectorAll('.carousel-button.prev')) as HTMLButtonElement[];
    const nextButtons = Array.from(document.querySelectorAll('.carousel-button.next')) as HTMLButtonElement[];

    if (!slidesContainer || slides.length === 0) {
      console.warn('Testimonial carousel elements not found.');
      return;
    }

    let currentIndex = 0;
    const totalSlides = slides.length;
    let autoPlayInterval: NodeJS.Timeout;

    function updateCarousel() {
      if (slidesContainer) {
        slidesContainer.style.transform = `translateX(-${currentIndex * 100}%)`;
      }
    }

    function goToNext() {
      currentIndex = (currentIndex + 1) % totalSlides;
      updateCarousel();
    }

    function startAutoPlay(delay = 6000) {
      clearInterval(autoPlayInterval);
      autoPlayInterval = setInterval(() => {
        goToNext();
      }, delay);
    }

    function goToPrevious() {
      currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
      updateCarousel();
      startAutoPlay(10000); // Reset timer to 10 seconds after manual navigation
    }

    function goToNextManual() {
      goToNext();
      startAutoPlay(10000); // Reset timer to 10 seconds after manual navigation
    }

    // Add event listeners to all prev/next buttons
    prevButtons.forEach(button => {
      button.addEventListener('click', goToPrevious);
    });

    nextButtons.forEach(button => {
      button.addEventListener('click', goToNextManual);
    });

    // Initialize
    updateCarousel();

    // Start auto-play: Change testimonial every 6 seconds initially
    startAutoPlay();
  });
</script> 